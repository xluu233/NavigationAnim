<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000">

    <rotate
        android:fromDegrees="360"
        android:toDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%" />

    <scale
        android:fromXScale="0.1"
        android:fromYScale="0.1"
        android:pivotX="100%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

</set>